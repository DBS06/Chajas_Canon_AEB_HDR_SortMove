{
    // defines if HDR-Search is based on exif-data, txt-files, or decide based on folders content
    // Possible values: <-/auto/exif/txt>
    //                  -:    Ask at startup
    //                  auto: auto detection
    //                  exif: exif-mode
    //                  txt:  txt-mode
    "detectionMode": "auto",
    // General Settings
    "general": {
        "hdrMainDir": {
            "Prefix": "",
            "Postfix": "_HDRs",
            "Name": {
                "useParentFolderName": true,
                "CustomName": ""
            }
        },
        "hdrSubDir": {
            "Prefix": "",
            "Postfix": "_HDR_",
            "Name": {
                "useParentFolderName": true,
                "CustomName": ""
            },
            "numPadding": 3
        },
        "imageSrcFileEnding": "CR2",
        "hdrSequenceMinNum": 3,
        "previewFiles": {
            "create": true,
            // TODO: Implement
            "convertRawToJpg": false,
            "convertQuality": "high"
        },
        "createLogFile": true
    },
    // EXIF-Mode Settings
    "exifModeCfg": {
        "primaryTag": {
            "name": "EXIF ExposureMode",
            "value": "Auto Bracket"
        },
        "secondaryTag": {
            "name": "MakerNote BracketMode",
            "value": "AEB"
        },
        "tertiaryTag": {
            "name": "MakerNote BracketValue",
            "value": "0"
        }
    },
    // TXT-Mode Settings
    "txtModeCfg": {
        "fileNameFilter": "HDR_",
        "fileEnding": "txt",
        "deleteTxtFiles": false
    }
}